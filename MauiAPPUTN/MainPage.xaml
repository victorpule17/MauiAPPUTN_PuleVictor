<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAPPUTN.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label    
                Text="INICIAR SESIÓN" 
                HorizontalOptions="Center" 
                FontSize="Large"
                FontAttributes="Bold"/>
            <Label x:Name="lblusuario">Usuario</Label>
            <Entry x:Name="txtUsuario" Placeholder="Username" />
            <Label x:Name="lblcontrasenia">Contraseña</Label>
            <Entry x:Name="txtContrasenia" Placeholder="Password" IsPassword="True" />
            <Button x:Name ="cmdLogin" Text="Login" Clicked="cmdLogin_Clicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
