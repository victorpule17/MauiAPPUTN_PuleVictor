<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAPPUTN.Menu"
             Title="Menu">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
        <Label
            Text="UNIVERSIDAD TÉCNICA DEL NORTE" 
            HorizontalOptions="Center"
            FontSize="Large"
            FontAttributes="Bold"        
            />

        <Label 
             Text="APLICACIONES MÓVILES" 
             HorizontalOptions="Center"
             FontSize="Large"
             FontAttributes="Bold"       
             />
        <Label 
            Text="CRUD de Productos y Clasificaciones" 
            HorizontalOptions="Center" 
            />
        <Label Text="Realizado por: Víctor Pule"></Label>
        <Label Text="Presione un botón para ir al CRUD que desee"></Label>
        <Button x:Name="cmdClasificaiones" Text="Clasificaciones" Clicked="cmdClasificaiones_Clicked"></Button>
        <Button x:Name="cmdProductos" Text="Productos" Clicked="cmdProductos_Clicked"></Button>
        <Button x:Name="cmdCerrar" Text="Cerrar Sesión" Clicked="cmdCerrar_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>